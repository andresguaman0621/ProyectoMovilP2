<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoMovilP2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ProyectoMovilP2.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        
        
        <ShellContent
        Title="Inicio"
        Icon="img_menu.svg"
        
        ContentTemplate="{DataTemplate views:Home}"/>

        <ShellContent
        Title="Redes"
        Icon="img_redes.svg"
        ContentTemplate="{DataTemplate views:ProductPage}"/>

        <ShellContent
        Title="Perfil"
        Icon="img_perfil.svg"
        ContentTemplate="{DataTemplate views:ProfilePage}"/>

    </TabBar>

</Shell>
